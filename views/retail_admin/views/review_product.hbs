	<script>
		function add_review(){


			var pro_id = $("#pro_id").val();
			var cust_name = $("#cust_name").val();
			var cust_review = $("#cust_review").val();
			var star_review = $("#star_review").val();
			var image_file = $('#image_file').prop('files')[0];

			var form_data = new FormData();
			form_data.append('pro_id', pro_id);
			form_data.append('cust_name', cust_name);
			form_data.append('cust_review', cust_review);
			form_data.append('star_review', star_review);
			form_data.append('image_file', image_file);



			if(pro_id == ""){
				$("#error").html("Select Category Name.");
				$("#error").show();
			}else if(cust_name == ""){
				$("#error").html("Enter Subcategory Name.");
				$("#error").show();
			}else{
				$("#error").hide();
				//$("#add_subcat").attr("disabled","disabled");

				$.ajax({

					type: "POST",
					data: form_data,
					dataType: 'text',
					contentType: false,
					cache: false,
					processData: false,
					url: "/retail_admin/review_rating_add_process",
					//data: {cat_id:cat_id,subcat_name:subcat_name,subcat_meta_title:subcat_meta_title,subcat_meta_keyword:subcat_meta_keyword,subcat_meta_desc:subcat_meta_desc},
					success: function(response){
                        var responseFinal = JSON.parse(response)
						if(responseFinal.status == "ok"){
							location.reload();
						}
						else if(responseFinal.status == "error")
						{

								alert("Something Went Wrong");
								$('.btn-primary').prop("disabled", false);
						}
						else if(responseFinal.status == "image_error")
						{
							alert("Please select image with only  JPG,PNG ,JPEG extension.");
						}
					}

				});
			}
		}

		function delete_review_rating(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Review & Rating to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "POST",
							url: "/retail_admin/review_rating_delete/"+delete_id,
							success: function(response){
								if(response == "error"){
									alert("Something Went Wrong!");
								}else if(response == "ok"){
									location.reload();
								}
							}
						});
					}

				}
		}
	</script>

