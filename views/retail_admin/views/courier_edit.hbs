	<script>
		function edit_courier(){

			var courier_id = $("#id").val();
			var courier_name = $("#courier_name").val();
			var courier_website = $("#courier_website").val();

			if(courier_name == ""){
				$("#error").html("Enter Courier Name.");
				$("#error").show();
			}else if(courier_website == ""){
				$("#error").html("Enter Courier Website.");
				$("#error").show();
			}else{
				$("#error").hide();
				$("#add_cat").attr("disabled","disabled");

				$.ajax({

					type: "POST",
					data: {courier_id:courier_id,courier_name:courier_name,courier_website:courier_website},
					dataType: 'text',
					url: "/retail_admin/courier_edit_process",
					//data: {cat_name:cat_name,cat_meta_title:cat_meta_title,cat_meta_keyword:cat_meta_keyword,cat_meta_desc:cat_meta_desc,cat_sort:cat_sort},
					success: function(response){
						if(response == "ok"){
							location.href="/retail_admin/courier_add";
						}
					}

				});
			}
		}

		function delete_courier(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Courier to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "POST",
							url: "courier_delete.php?id="+delete_id,
							success: function(response){
								if(response == "ok"){
									location.reload();
								}
							}
						});
						//alert(delete_id);

					}

				}
		}
	</script>

