	<script>
		function add_dealer(){

			var first_name = $("#first_name").val();
			var last_name = $("#last_name").val();
			var phone = $("#phone").val();
			var whatsapp = $("#whatsapp").val();
			var email = $("#email").val();
			var company = $("#company").val();
			var address = $("#address").val();
			var vendor_sku = $("#vendor_sku").val();

			if(first_name == ""){
				$("#error").html("Enter First Name.");
				$("#error").show();
			}else if(vendor_sku == ""){
				$("#error").html("Enter Vendor Sku.");
				$("#error").show();
			}else{
				$("#error").hide();
				$("#add_cat").attr("disabled","disabled");

				$.ajax({

					type: "POST",
					data: {first_name:first_name,last_name:last_name,phone:phone,whatsapp:whatsapp,email:email,company:company,address:address,vendor_sku:vendor_sku},
					dataType: 'text',
					url: "/retail_admin/dealer_add_process",
					//data: {cat_name:cat_name,cat_meta_title:cat_meta_title,cat_meta_keyword:cat_meta_keyword,cat_meta_desc:cat_meta_desc,cat_sort:cat_sort},
					success: function(response){
						if(response === "ok"){

							location.href="/retail_admin/dealer_add";
						}else if(response == "vendorsku_error")
						{
							alert("Vendor Sku already exist.")
						}else{
							alert("Something went wrong.")
						}
					}

				});
			}
		}

		function delete_dealer(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Dealer to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "POST",
							url: "/retail_admin/dealer_delete/"+delete_id,
							success: function(response){
								if(response === "ok"){
									/* location.reload(); */
									location.href="/retail_admin/dealer_add";
								}else if(response == "vendor_error"){

                              alert("You can Not Delete Dealer Who Related With Product");
								}
							}
						});
						//alert(delete_id);

					}

				}
		}
	</script>

