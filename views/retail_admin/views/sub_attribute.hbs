<body>
    <!-- [ Preloader ] Start -->
    <div class="page-loader">
        <div class="bg-primary"></div>
    </div>
    <!-- [ Preloader ] End -->

    <!-- [ Layout wrapper ] Start -->
    <div class="layout-wrapper layout-2">
        <div class="layout-inner">
            <!-- [ Layout sidenav ] Start -->
           {{>sidebar}}
            <!-- [ Layout sidenav ] End -->
            <!-- [ Layout container ] Start -->
            <div class="layout-container">
                <!-- [ Layout navbar ( Header ) ] Start -->
               {{>header}}
                <!-- [ Layout navbar ( Header ) ] End -->

                <!-- [ Layout content ] Start -->
                <div class="layout-content">

                    <!-- [ content ] Start -->
                    <div class="container-fluid flex-grow-1 container-p-y">
                        <h4 class="font-weight-bold py-3 mb-0">Add Subcategory</h4>
                        <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/index"><i class="feather icon-home"></i></a></li>
                                <li class="breadcrumb-item ">Subcategory</li>
                                <li class="breadcrumb-item active">Add Subcategory</li>
                            </ol>
                        </div>

                        <div class="card mb-4 col-md-3" style="float:left;margin-right:40px;">
                            <h6 class="card-header">Add New Sub Attribute</h6>
                            <div class="card-body">

								<div class="form-group">
									<label class="form-label">Select Attribute</label>
									<select class="select2-demo form-control" id="attribute_id">

									            {{#each attributeData}}
                                                        <option value="{{this._id}}">
                                                            {{this.attribute_name}}
                                                        </option>
                                                        {{/each}}

									</select>
								</div>
								<div class="form-group">
                                                    <label class="form-label">Sub Attribute Name</label>
                                                    <input type="text" name="" id="sub_attribute_name" class="form-control" value="">
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">Meta Keyword</label>
                                                    <input type="text" name="" id="sub_attribute_metakey" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">Meta Title</label>
                                                    <input type="text" name="" id="sub_attribute_metatitle" class="form-control" >
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">Meta Description</label>
                                                    <input type="text" name="" id="sub_attribute_metadesc" class="form-control" >
                                                </div><br>
								<small class="form-text text-muted" id="error" style="display:none;color:red !important;margin-bottom:10px;"></small>
								<button type="button" id="add_subcat" class="btn btn-primary" onclick="add_sub_attribute()">Add</button>
                            </div>
                        </div>

						<div class="card col-md-8">
						<div>
							<button type="button" onclick="delete_sub_attribute()" class="btn btn-danger icon-btn borderless">Delete</button>
						</div>
                            <div class="card-datatable table-responsive">
                                <table id="user-list" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>

                                            <th></th>
											<th></th>
                                            <th>No.</th>
                                            <th>Attribute Name</th>
											<th>Sub Attribute Name</th>
                                            <th>Meta Title</th>
                                            <th>Meta keyword</th>
                                            <th>Meta Desription</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each subattrData}}
                                        <tr>
                                            <td><input type="checkbox" id="delete_checkbox" name="delete_checkbox" value="{{this.id}}"></td>
                                            <td><a href="/subattribute_edit/{{this.id}}"><button type="button" class="btn btn-outline-info icon-btn borderless"><span class="ion ion-md-create"></span></button></a></td>
                                            <td>{{this.no}}</td>
                                            <td>{{{this.attribute_name}}}</td>
                                            <td>{{{this.sub_attribute_name}}}</td>
                                            <td>{{this.sub_attribute_metatitle}}</td>
                                            <td>{{this.sub_attribute_metakey}}</td>
                                            <td>{{this.sub_attribute_metadesc}}</td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>
                    <!-- [ content ] End -->

                    <!-- [ Layout footer ] Start -->
                   {{>footer}}
                    <!-- [ Layout footer ] End -->

                </div>
                <!-- [ Layout content ] Start -->

            </div>
            <!-- [ Layout container ] End -->
        </div>
