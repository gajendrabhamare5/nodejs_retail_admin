    <!-- Demo -->
    <script src="/assets/js/demo.js"></script><script src="/assets/js/analytics.js"></script>
	<script src="/assets/js/pages/forms_selects.js"></script>
	<script src="/assets/libs/growl/growl.js"></script>


	<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.4.0/js/dataTables.buttons.min.js"></script>
      <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.html5.min.js"></script>
      <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.print.min.js"></script>
      <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.4.0/css/buttons.dataTables.min.css">
      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
      <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/pdfmake.min.js"></script>

	<script>
		function add_sub_attribute(){

			var attribute_id = $("#attribute_id").val();
			var sub_attribute_name = $("#sub_attribute_name").val();
			var sub_attribute_metakey = $("#sub_attribute_metakey").val();
			var sub_attribute_metatitle = $("#sub_attribute_metatitle").val();
			var sub_attribute_metadesc = $("#sub_attribute_metadesc").val();

			var form_data = new FormData();
			form_data.append('attribute_id', attribute_id);
			form_data.append('sub_attribute_name', sub_attribute_name);
			form_data.append('sub_attribute_metakey', sub_attribute_metakey);
			form_data.append('sub_attribute_metatitle', sub_attribute_metatitle);
			form_data.append('sub_attribute_metadesc', sub_attribute_metadesc);




				$.ajax({

					type: "POST",
					data: form_data,
					dataType: 'text',
					contentType: false,
					cache: false,
					processData: false,
					url: "/sub_attribute_add_process",
					success: function(response){
						if(response == "ok"){
							location.reload();
						}
						else if(response == "error")
						{
								alert("Subcategory Name Already Exist");
								$('.btn-primary').prop("disabled", false);
						}
						else if(response == "image_error")
						{
							alert("Please select image with only  JPG,PNG ,JPEG extension.");
						}
					}

				});
			}


		function delete_sub_attribute(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Subattribute to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "POST",
							url: "/sub_attribute_delete/"+delete_id,
							success: function(response){
								if(response == "error"){
									alert("You cannot delete SubAttribute as it is linked with Attribute!");
								}else if(response == "ok"){
									location.reload();
								}
							}
						});
					}

				}
		}
	</script>

</body>


