    <script>
        function add_about_us() {

            var section_1 = CKEDITOR.instances.editor1.getData();
            // var section_2 = CKEDITOR.instances.editor2.getData();
            var type = 'terms_condition';
            var form_data = new FormData();
            // form_data.append('image_file', image_file);
            form_data.append('section_1', section_1);
            form_data.append('type', type);

            $.ajax({
                type: "POST",
                data: form_data,
                contentType: false,
                cache: false,
                processData: false,
                url: "terms_update",
                success: function (response) {
                    if (response == "ok") {
                        location.reload();
                    }
                }
            });
        }

    </script>

