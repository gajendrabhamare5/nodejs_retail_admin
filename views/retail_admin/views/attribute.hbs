	<script>
		function add_attribute(){

			var attribute_name = $("#attribute_name").val();
			var attribute_metakey = $("#attribute_metakey").val();
			var attribute_metatitle = $("#attribute_metatitle").val();
			var attribute_metadesc = $("#attribute_metadesc").val();
			var filter_checkbox = $("#filter_checkbox").val();


			var form_data = new FormData();
			form_data.append('attribute_name', attribute_name);
			form_data.append('attribute_metakey', attribute_metakey);
			form_data.append('attribute_metatitle', attribute_metatitle);
			form_data.append('attribute_metadesc', attribute_metadesc);
			form_data.append('filter_checkbox', filter_checkbox);



				$.ajax({

					type: "POST",
					data: form_data,
					dataType: 'text',
					contentType: false,
					cache: false,
					processData: false,
					url: "/attribute_add_process",
					success: function(response){
						if(response == "ok"){
							location.reload();
						}
						else if(response == "error")
						{
								alert("Attribute Name Already Exist");
								$('.btn-primary').prop("disabled", false);
						}
					}

				});
			}


		function delete_attribute(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Attribute to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "POST",
							url: "attribute_delete/"+delete_id,

							success: function(response){
								if(response == "error"){
									alert("You cannot delete Attribute!");
								}else if(response == "ok"){
									location.reload();
								}
							}
						});
					}

				}
		}

