													<label class="form-label">Meta Description</label>
													<input type="text" class="form-control" name="cat_meta_desc">
													<!-- <small class="form-text text-muted" id="error" style="display:none;color:red !important;"></small> -->
												</div>
												<div class="form-group">
													<label class="form-label">Category content</label>
													<textarea name="catcontent" id="editor1"></textarea>
													<small class="form-text text-muted" id="error"
														style="display:none;color:red !important;"></small>
												</div>
												<button type="submit" class="btn btn-primary">Add</button>

											</div>
										</form>

