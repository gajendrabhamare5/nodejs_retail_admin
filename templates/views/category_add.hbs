			function add_slug() {

				var cat_name1 = $('#cat_name').val();

				var slug = cat_name1.replace(/\s+/g, '-').toLowerCase();

				$('#cat_slug').val(slug);


			}



	</script>
	<script>
function hide_category(id){

if(confirm('Are You Sure You Want To Hide?')){

	location.href="category_hide/"+id;

}

}

function delete_category(){
				var delete_id = [];
				$.each($("input[name='delete_checkbox']:checked"), function(){
					delete_id.push($(this).val());
				});
				//alert("Id to Delete are: " + delete_id.join(", "));
				if(delete_id == ""){
					alert("Please Select a Category to Delete");
				}else{

					if(confirm('Are You Sure You Want To Delete?')){
						$.ajax({
							type: "GET",
							url: "category_delete/"+delete_id,
							success: function(response){
								if(response == "error"){
									alert("You cannot delete category as it is linked with subcategory or catalog!");
								}else if(response == "ok"){
									location.reload();
								}
							}
						});

					}
				}
		}

	</script>
