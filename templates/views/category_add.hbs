							</div>
							<div class="card-datatable table-responsive">
								<table id="user-list" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th></th>
											<th></th>
											<th>Sr. No.</th>
											<th></th>
											<th>Image</th>
											<th>Category Name</th>
											<th>Category Slug</th>
											{{!-- <th>Stiching Price</th> --}}
											{{!-- <th>Category Mobile Number</th> --}}
											<th>Meta Title</th>
											<th>Meta Keyword</th>
											<th>Meta Description</th>
											<th>Category Sort</th>
											<th>Other details </th>
										</tr>
									</thead>
									<tbody>
										{{#each category_masters}}
										<tr>
											<td>{{{this.checkbox}}}</td>
											<td>{{{this.edit}}}</td>
											<td>{{this.no}}</td>
											<td>{{{this.hide}}}</td>
											<td>{{{this.image}}}</td>
											<td>{{this.name}}</td>
											<td>{{this.cat_seo_url}}</td>
											{{!-- <td>{{this.cat_mob_no}}</td> --}}
											<td>{{this.meta_title}}</td>
											<td>{{this.meta_keyword}}</td>
											<td>{{this.meta_description}}</td>
											<td>{{this.category_sort}}</td>
											<td>{{{this.other_details}}}</td>
										</tr>
										{{/each}}
